---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="mx-auto max-w-3xl text-center">
  <h1 class="text-4xl font-bold mb-8 text-neutral-800 dark:text-neutral-200">{title}</h1>
  <p class="text-lg mb-16 text-neutral-600 dark:text-neutral-400">{subtitle}</p>
</div>
