---
const { class: className } = Astro.props;
---
<div class={`flex items-center ${className}`}>
  <div class="relative flex items-center">
    <!-- House logo -->
    <div class="absolute left-1">
      <svg width="18" height="16" viewBox="0 0 18 16" fill="none">
        <path 
          d="M9 1L17 9H13V15H5V9H1L9 1Z" 
          class="fill-yellow-500 stroke-neutral-700 dark:fill-yellow-400 dark:stroke-neutral-300"
          stroke-width="1"
          stroke-linejoin="round"
        />
      </svg>
    </div>
    <!-- Background rounded rectangle with text -->
    <div class="ml-9 rounded-full bg-neutral-100/30 px-4 py-1.5 dark:bg-neutral-800/30">
      <span class="text-lg font-bold tracking-wide text-neutral-700 dark:text-neutral-300">MaKoKo Bau</span>
    </div>
  </div>
</div>
