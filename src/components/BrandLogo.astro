---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;

import logoImage from '../images/MakokoBauLogo.avif';
---

<div class={`flex items-center ${className}`}>
  <div class="relative flex items-center">
    <!-- Logo image -->
    <div class="absolute left-1">
      <img 
        src={logoImage.src}
        alt="MaKoKo Bau Logo" 
        width="64" 
        height="64"
        class="object-contain"
      />
    </div>
    <!-- Background rounded rectangle with text -->
    <div class="ml-20 rounded-full bg-neutral-100/30 px-4 py-1.5 dark:bg-neutral-800/30">
      <span class="text-lg font-bold tracking-wide text-neutral-700 dark:text-neutral-300 whitespace-nowrap">MaKoKo Bau</span>
    </div>
  </div>
</div>
