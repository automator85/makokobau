---
// Import the necessary components
import MainLayout from "../layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Kontakt | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://makoko-bau.de/contact",
    "url": "https://makoko-bau.de/contact",
    "name": "Kontakt | MaKoKo Bau",
    "description":
      "Kontaktieren Sie MaKoKo Bau für professionelle Holz- und Bautenschutzarbeiten, Flachdachsanierung und Abrissarbeiten in Berlin. Wir beraten Sie gerne!",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://makoko-bau.de",
      "name": "MaKoKo Bau",
      "description":
        "Ihr zuverlässiger Partner für Holz- und Bautenschutz, Flachdachsanierung und professionelle Abrissarbeiten in Berlin.",
    },
    "inLanguage": "de-DE"
  }}
>
  <ContactSection />
</MainLayout>
