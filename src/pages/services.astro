---
// Import necessary components
import MainLayout from "../layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Holz- und Bautenschutz",
    subTitle:
      "Wir bieten professionelle Holz- und Bautenschutzarbeiten für langfristige Haltbarkeit und Sicherheit Ihrer Immobilie. Unsere Experten verwenden modernste Techniken und hochwertige Materialien, um optimalen Schutz zu gewährleisten. Von der Diagnose bis zur Ausführung garantieren wir fachgerechte Arbeit nach höchsten Standards.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Detaillierte Planung von Holzschutzarbeiten",
    imgTwo: personWorking,
    imgTwoAlt: "Professionelle Ausführung von Bautenschutzarbeiten",
  },
  {
    isRightSection: false,
    title: "Flachdachsanierung",
    subTitle:
      "Unsere Flachdachsanierung garantiert zuverlässige Abdichtung und optimalen Schutz vor Witterungseinflüssen. Mit jahrelanger Erfahrung und modernster Technik führen wir Sanierungen effizient und nachhaltig durch. Wir analysieren den Zustand Ihres Daches gründlich und entwickeln maßgeschneiderte Sanierungslösungen.",
    img: beforeAfter,
    imgAlt: "Vorher-Nachher Vergleich einer Flachdachsanierung",
    btnExists: true,
    btnTitle: "Mehr erfahren",
    btnURL: "#flachdach",
  },
  {
    isRightSection: true,
    title: "Professionelle Abrissarbeiten",
    subTitle:
      "Bei Abrissarbeiten setzen wir auf sichere und effiziente Durchführung. Unser erfahrenes Team garantiert einen reibungslosen Ablauf unter Einhaltung aller Sicherheits- und Umweltvorschriften. Von der Planung bis zur Entsorgung - wir kümmern uns um alle Aspekte Ihres Abrissprojekts.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Professionelle Durchführung von Abrissarbeiten",
    imgTwo: aerialView,
    imgTwoAlt: "Übersicht einer Abrissbaustelle",
  },
  {
    isRightSection: false,
    title: "Umfassende Beratung",
    subTitle:
      "Wir bieten eine ausführliche Beratung zu allen unseren Leistungen. Unsere Experten analysieren Ihre spezifischen Anforderungen und entwickeln passende Lösungsvorschläge. Von der ersten Begutachtung bis zum Abschluss der Arbeiten stehen wir Ihnen mit Rat und Tat zur Seite.",
    img: usingTools,
    imgAlt: "Fachkundige Beratung vor Ort",
  },
  {
    isRightSection: true,
    title: "Qualitätssicherung",
    subTitle:
      "Qualität steht bei uns an erster Stelle. Durch regelmäßige Kontrollen und dokumentierte Abnahmen gewährleisten wir höchste Standards bei allen unseren Arbeiten. Wir verwenden ausschließlich hochwertige Materialien und arbeiten mit modernster Technik.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Qualitätskontrolle während der Arbeiten",
    imgTwo: underConstruction,
    imgTwoAlt: "Dokumentation der Qualitätssicherung",
    btnExists: true,
    btnTitle: "Mehr Details",
    btnURL: "#qualitaet",
  },
];

const pageTitle: string = `Leistungen | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://makoko-bau.de/services",
    "url": "https://makoko-bau.de/services",
    "name": "Professionelle Baudienstleistungen | MaKoKo Bau",
    "description": "MaKoKo Bau bietet professionelle Holz- und Bautenschutzarbeiten, Flachdachsanierung und Abrissarbeiten. Qualität und Zuverlässigkeit für Ihre Bauprojekte.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://makoko-bau.de",
        "name": "MaKoKo Bau",
        "description": "Ihr zuverlässiger Partner für Holz- und Bautenschutz, Flachdachsanierung und professionelle Abrissarbeiten."
    },
    "inLanguage": "de-DE"
  }}
>
  <MainSection
    title="Unsere Leistungen im Überblick"
    subTitle="MaKoKo Bau steht für professionelle Ausführung und höchste Qualität in allen Bereichen. Von Holz- und Bautenschutz über Flachdachsanierung bis hin zu Abrissarbeiten - wir sind Ihr kompetenter Partner für alle Bauvorhaben."
    btnExists={true}
    btnTitle="Jetzt Beratungstermin vereinbaren"
    btnURL="/contact"
  />

  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }

  <FeaturesStats
    title="Unsere Erfolge in Zahlen"
    subTitle="Bei MaKoKo Bau steht Qualität und Kundenzufriedenheit an erster Stelle. Unsere Zahlen sprechen für sich und zeigen unseren Erfolg in der Branche."
    mainStatTitle="98%"
    mainStatSubTitle="unserer Kunden sind mit unserer Arbeit sehr zufrieden"
    stats={[
      {
        stat: "15+",
        description: "Jahre Erfahrung",
      },
      {
        stat: "500+",
        description: "erfolgreiche Projekte",
      },
      {
        stat: "100%",
        description: "Qualitätsgarantie",
      },
    ]}
  />
</MainLayout>
