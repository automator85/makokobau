---
// Import the necessary components
import MainLayout from "../layouts/MainLayout.astro";
import HeroSection from "../components/sections/landing/HeroSection.astro";
import FeaturesNavs from "../components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "../components/sections/testimonials/TestimonialsSection.astro";
import FAQ from "../components/sections/misc/FAQ.astro";
import heroImage from "../images/construction-image.avif";
import faqs from "../data_files/faqs.json";
import construction from "../images/construction-image.avif";
import tools from "../images/automated-tools.avif";
import using_tools from "../images/using-tools.avif";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <HeroSection
    title=`Willkommen bei <span class="text-yellow-500 dark:text-yellow-400">MaKoKo Bau</span>`
    subTitle="Ihr Experte für Holz- und Bautenschutz, Flachdachsanierung und professionelle Abrissarbeiten."
    primaryBtn="Kontakt aufnehmen"
    primaryBtnURL="/makokobau/contact"
    secondaryBtn="Unsere Leistungen"
    secondaryBtnURL="/makokobau/services"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.9</span> / 5`
    starCount={5}
    reviews=`Über <span class="font-bold">500</span> zufriedene Kunden`
    src={heroImage}
    alt="Professionelle Bauarbeiten von MaKoKo Bau"
  />

  <FeaturesNavs
    title=`Professionelle <span class="text-yellow-500 dark:text-yellow-400">Baudienstleistungen</span> für Ihre Anforderungen`
    tabs={[
      {
        heading: "Holz- und Bautenschutz",
        content:
          "Wir schützen Ihre Immobilie mit modernsten Techniken und hochwertigen Materialien. Unsere Experten sorgen für langanhaltenden Schutz und Werterhalt.",
        svg: "shield",
        src: tools,
        alt: "Holz- und Bautenschutzarbeiten",
        first: true,
      },
      {
        heading: "Flachdachsanierung",
        content:
          "Professionelle Sanierung und Abdichtung von Flachdächern. Wir gewährleisten eine fachgerechte Ausführung und dauerhafte Dichtigkeit.",
        svg: "home",
        src: using_tools,
        alt: "Flachdachsanierung",
        second: true,
      },
      {
        heading: "Abrissarbeiten",
        content:
          "Sichere und effiziente Durchführung von Abrissarbeiten. Unser erfahrenes Team garantiert eine professionelle und umweltgerechte Ausführung.",
        svg: "tools",
        src: construction,
        alt: "Professionelle Abrissarbeiten",
      },
    ]}
  />

  <TestimonialsSection
    title="Das sagen unsere Kunden"
    subTitle="Erfahren Sie, warum unsere Kunden uns vertrauen"
    testimonials={[
      {
        content:
          "MaKoKo Bau hat unsere Flachdachsanierung perfekt durchgeführt. Professionelle Beratung, zuverlässige Ausführung und ein hervorragendes Ergebnis!",
        author: "Thomas Schmidt",
        role: "Immobilienverwalter | München",
        avatarSrc:
          "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "500+",
        description:
          "zufriedene Kunden in der Region",
      },
      {
        count: "15+",
        description:
          "Jahre Erfahrung im Baugewerbe",
      },
      {
        count: "100%",
        description:
          "Qualitätsgarantie auf unsere Arbeiten",
      },
      {
        count: "4.9",
        description: "durchschnittliche Kundenbewertung",
      },
    ]}
  />

  <FAQ title="Häufig gestellte<br />Fragen" faqs={faqs} />
</MainLayout>
